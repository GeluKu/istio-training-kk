# kind-dualstack-no-cni.yaml
kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
name: istio-lab
networking:
  disableDefaultCNI: true   # Prevents Kind from installing its default CNI
  ipFamily: dual            # Enables dual-stack (IPv4 + IPv6)
nodes:
  - role: control-plane
  - role: worker
  - role: worker
